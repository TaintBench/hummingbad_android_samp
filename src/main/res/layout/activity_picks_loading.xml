<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="19dp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/cmadsdk_market_top_gp" android:background="#44c1c3" android:layout_width="0dp" android:layout_height="0dp" android:text="Play Store"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/cmadsdk_market_top_gp_image" android:background="@drawable/cmasdk_market_top_gp" android:layout_width="0dp" android:layout_height="0dp"/>
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:background="@drawable/cmadsdk_ad_tag" android:layout_width="14dp" android:layout_height="10dp" android:layout_marginLeft="4dp"/>
    </FrameLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/cmadsdk_loading_cicle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cmadsdk_pick_loading_circle_big" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="#adadad" android:id="@+id/cmadsdk_loading_tv" android:paddingTop="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/cmadsdk_loading_cicle" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
